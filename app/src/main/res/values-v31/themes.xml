<resources>
    <!-- Base application theme. -->
    <style name="Theme.RboardThemeManagerV3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@android:color/system_neutral1_100</item>
        <item name="colorBackgroundFloating">@android:color/system_neutral1_50</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_600</item>
        <item name="colorPrimaryContainer">@android:color/system_accent2_100</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>

        <item name="colorSecondary">@android:color/system_accent1_600</item>
        <item name="colorSecondaryVariant">@android:color/system_accent1_600</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_100</item>
        <item name="colorOnSecondary">@android:color/system_neutral2_900</item>

        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="popupMenuStyle">@style/PopupStyle</item>
        <item name="materialAlertDialogTheme">
            @style/Dialog.RboardThemeManagerV3.MaterialAlertDialog
        </item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="Theme.RboardThemeManagerV3">
        <item name="colorPrimary">@android:color/system_accent2_600</item>
        <item name="colorPrimaryContainer">@android:color/system_accent2_200</item>
        <item name="colorOnSurface">@android:color/system_neutral1_100</item>
        <item name="colorOutline">@android:color/system_neutral2_400</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.Main" parent="Theme.RboardThemeManagerV3">

    </style>

    <style name="Theme.RboardThemeManagerV3.Info" parent="Theme.RboardThemeManagerV3">
        <item name="android:statusBarColor">?attr/colorBackgroundFloating</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.InstallPack" parent="Theme.RboardThemeManagerV3">
        <item name="android:statusBarColor">?attr/colorBackgroundFloating</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/system_neutral1_50</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_50</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.AppWidgetContainer" parent="Theme.RboardThemeManagerV3.AppWidgetContainerParent">
        <item name="appWidgetPadding">@dimen/roundCorners</item>
    </style>
</resources>