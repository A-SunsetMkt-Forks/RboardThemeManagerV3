<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RboardThemeManagerV3_Yellow" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/app_background_yellow</item>
        <item name="colorBackgroundFloating">@color/foreground_yellow</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/accent_yellow</item>
        <item name="colorPrimaryVariant">@color/accent_yellow</item>
        <item name="colorPrimaryContainer">@color/accent_yellow_2</item>
        <item name="colorOnPrimary">@color/text</item>

        <item name="colorSecondary">@color/accent_yellow</item>
        <item name="colorSecondaryVariant">@color/accent_yellow</item>
        <item name="colorSecondaryContainer">@color/md3_yellow</item>
        <item name="colorOnSecondary">@color/text</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/app_background_yellow</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="popupMenuStyle">@style/PopupStyle</item>
        <item name="alertDialogTheme">@style/Dialog.RboardThemeManagerV3.MaterialAlertDialog</item>
        <item name="materialAlertDialogTheme">
            @style/Dialog.RboardThemeManagerV3.MaterialAlertDialog
        </item>

        <item name="switchStyle">@style/Widget.App.Switch_Yellow</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar_Yellow</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.SnackbarTextView_Yellow</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton_Yellow</item>
    </style>

    <style name="Widget.App.Snackbar_Yellow" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?attr/colorBackgroundFloating</item>
    </style>

    <style name="Widget.App.SnackbarTextView_Yellow" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Widget.App.SnackbarButton_Yellow" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.App.Switch_Yellow" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch_Yellow</item>
    </style>

    <style name="ThemeOverlay.App.Switch_Yellow" parent="Theme.RboardThemeManagerV3_Yellow">
        <item name="colorPrimary">@color/accent_yellow_2</item>
        <item name="colorPrimaryContainer">@color/accent_yellow</item>
        <item name="colorOnSurface">@color/switch_track</item>
        <item name="colorOutline">@color/switch_thumb</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.Main_Yellow" parent="Theme.RboardThemeManagerV3_Yellow">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.Info_Yellow" parent="Theme.RboardThemeManagerV3_Yellow">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/foreground_yellow</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.InstallPack_Yellow" parent="Theme.RboardThemeManagerV3_Yellow">
        <item name="android:statusBarColor">@color/foreground_yellow</item>
        <item name="android:navigationBarColor">@color/foreground_yellow</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
    <style name="Theme.RboardThemeManagerV3.ShareFlags_Yellow" parent="Theme.RboardThemeManagerV3_Yellow">
        <item name="android:statusBarColor">@color/foreground_yellow</item>
        <item name="android:navigationBarColor">@color/foreground_yellow</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.RboardThemeManagerV3.AppBarLayouts_Yellow" parent="Widget.Material3.AppBarLayout">
        <item name="colorPrimary">@color/foreground_yellow</item>
        <item name="colorPrimaryVariant">@color/foreground_yellow</item>
        <item name="colorOnPrimary">@color/text</item>
        <item name="colorSurface">@color/app_background_yellow</item>
        <item name="android:textColorPrimary">@color/text</item>
    </style>
</resources>